{
  "version": "1.0.0",
  "collectionName": "global",
  "description": "Reglas por defecto para detección de duplicados",
  "updatedAt": "2025-10-18T21:00:00Z",

  "colorWords": {
    "enabled": true,
    "description": "Palabras de colores que indican variantes",
    "words": [
      "negro", "negra", "negros", "negras",
      "blanco", "blanca", "blancos", "blancas",
      "rojo", "roja", "rojos", "rojas",
      "azul", "azules",
      "amarillo", "amarilla", "amarillos", "amarillas",
      "verde", "verdes",
      "gris", "grises",
      "naranja", "naranjas",
      "morado", "morada", "morados", "moradas",
      "rosa", "rosas",
      "cafe", "cafes", "marron", "marrón", "marrones",
      "plomo", "plomos",
      "beige", "beis",
      "violeta", "violetas",
      "celeste", "celestes",
      "turquesa", "turquesas",
      "fucsia", "fucsias",
